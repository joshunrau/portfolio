---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.png";
import { useTranslations } from "../i18n";
const { t } = useTranslations(Astro.url);
---

<section class="flex h-full w-full flex-col items-center justify-center gap-5 sm:flex-row">
  <div class="text-center sm:flex-grow sm:text-left">
    <h1 class="whitespace-nowrap font-display text-4xl font-bold text-slate-900 dark:text-slate-100 sm:text-5xl">
      {t("hero.title")}
    </h1>
    <p class="mt-3 text-base text-slate-600 dark:text-slate-300 sm:mt-5 sm:text-lg">
      {t("hero.subtitle")}
    </p>
  </div>
  <div class="w-96 lg:w-112 2xl:w-128">
    <Image height={1222} width={1222} src={avatar} alt="Avatar of Joshua Unrau" />
  </div>
</section>
