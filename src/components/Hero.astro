---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.png";
import { useTranslations } from "../i18n";
const { t } = useTranslations(Astro.url);
---

<section class="flex h-full w-full items-center">
  <div class="flex-grow">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100 md:text-4xl lg:text-5xl">
      {t("hero.title")}
    </h1>
    <p class="mx-auto mt-3 w-11/12 text-base text-slate-600 dark:text-slate-300 md:mt-5 md:text-lg xl:mx-0">
      {t("hero.subtitle")}
    </p>
  </div>
  <div class="max-w-xl">
    <Image height={1222} width={1222} src={avatar} alt="Avatar of Joshua Unrau" />
  </div>
</section>
