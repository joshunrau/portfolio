---
import { useTranslations } from '@/i18n';
const { t } = useTranslations(Astro.url);
---

<footer class="bg-white py-5 text-sm dark:bg-slate-800">
  <div class="container flex items-center justify-center gap-2">
    <a
      href="https://github.com/joshunrau"
      class="text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-slate-100"
      target="_blank"
      rel="noreferrer"
    >
      {t('common.gitHub')}
    </a>
  </div>
  <p class="mt-2 text-center text-slate-600 dark:text-slate-300">
    &copy; {new Date().getFullYear()} Joshua Unrau.
  </p>
</footer>
